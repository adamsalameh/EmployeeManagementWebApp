<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Employee Management WebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EmployeeManagementWebApp.styles.css" asp-append-version="true" />

    @* Dynamic theme loading based on department *@
    @if (ViewBag.Department == "IT")
    {
        <link rel="stylesheet" href="~/css/it-theme.css" />
    }
    else if (ViewBag.Department == "HR")
    {
        <link rel="stylesheet" href="~/css/hr-theme.css" />
    }
    else if (ViewBag.Department == "Finance")
    {
        <link rel="stylesheet" href="~/css/finance-theme.css" />
    }
    else if (ViewBag.Department == "Marketing")
    {
        <link rel="stylesheet" href="~/css/marketing-theme.css" />
    }
    <!-- Add other themes as needed -->
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" asp-route-department="@ViewBag.Department">Employee Management</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index" asp-route-department="@ViewBag.Department">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Login" asp-route-department="@ViewBag.Department">Admin</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Employee" asp-action="Index" asp-route-department="@ViewBag.Department">Employees</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Employee" asp-action="Search" asp-route-department="@ViewBag.Department">Search</a>
                        </li>                        
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - <a asp-area="" asp-controller="Home" asp-action="Index" asp-route-department="@ViewBag.Department">Home</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <!-- JavaScript to auto-hide alerts -->
    <script>
        $(document).ready(function () {
            $("#success-alert").fadeTo(2000, 500).slideUp(500, function () { 
                $(this).remove(); }); });
    </script>
</body>
</html>
